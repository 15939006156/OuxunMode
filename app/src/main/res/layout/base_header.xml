<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_header"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/title_bg">

    <LinearLayout
        android:id="@+id/lin_head_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/text_head_leftback"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:background="@drawable/back_white" />

        <TextView
            android:id="@+id/text_head_left2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_head_right"
        style="@style/WrapWrap.Horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:id="@+id/text_head_right1"
            style="@style/WrapWrap"
            android:layout_gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="确认"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_head_right2"
            style="@style/WrapWrap"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/back_right"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_head_title"
        style="@style/MatchMatch"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:textSize="16sp"
        android:gravity="center" />
    <EditText
        android:id="@+id/edit_head_title"
        android:layout_width="240dp"
        android:layout_height="29dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/activity_head_search_shape"
        android:ems="10"
        android:hint="请输入需要搜索的内容"
        android:inputType="textPersonName"
        android:paddingLeft="24dp"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:textColorHint="@color/main_text999"
        android:textSize="14dp"
        android:visibility="gone"/>
    <View
        android:id="@+id/text_head_view"
        style="@style/view_hight1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>